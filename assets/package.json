{
  "repository": {},
  "license": "MIT",
  "scripts": {
    "scss": "node-sass --output-style compressed --source-map true -o ../priv/static/css scss",
    "autoprefixer": "postcss -u autoprefixer -r  ../priv/static/css/*.css",
    "lint": "eslint js",
    "browserify": "browserify js/app.js -t [ babelify ] --debug | exorcist ../priv/static/js/app.map.js > ../priv/static/js/app.js",
    "uglify": "mkdir -p ../priv/static/js && uglifyjs js/*.js --source-map -m -o ../priv/static/js/app.js",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:static": "cp -R static/* ../priv/static/",
    "build": "npm-run-all build:*",
    "watch:css": "onchange 'scss/*.scss' -- npm run build:css",
    "watch:js": "onchange 'js/*.js' -- npm run build:js",
    "watch": "npm-run-all --parallel watch:*"
  },
  "dependencies": {
    "phoenix": "file:../deps/phoenix",
    "phoenix_html": "file:../deps/phoenix_html"
  },
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "babel-core": "^6.26.0",
    "babelify": "^8.0.0",
    "browserify": "^16.1.0",
    "copyfiles": "^1.2.0",
    "eslint": "^4.18.1",
    "exorcist": "^1.0.1",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.3.0",
    "postcss-cli": "^5.0.0",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.3.11"
  }
}
